<div class="main">
  <form class="register-form" {{action saveChatter model on="submit"}}>
    <div class="form-inputs">

      <p class="form-field">
        <label class="input-label">Email:</label>
        {{input class="input-field" type="text" placeholder="Email" value=model.email}}
      </p>

      <p class="form-field">
        <label class="input-label">Password:</label>
        {{input class="input-field" type="password" placeholder="Password" value=model.password}}
      </p>

      <p class="form-field">
        <label class="input-label">Username:</label>
        {{input class="input-field" type="text" placeholder="Username" value=model.username}}
      </p>

      <button class="save-button">Register</button>
    </div>

    <div class="form-extra">
      <div class="form-extra__content">
        <p class="form-extra__content__text">
          If you are already registered, click here to go to the login page.
        </p>
        {{#link-to "login"}}
          <button class="save-button">Login</button>
        {{/link-to}}
      </div>
    </div>
  </form>
</div>
